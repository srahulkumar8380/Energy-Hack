<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackthon.srahulkumar.energyhackapp">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/text_home"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MenuActivity.FeedbackActivity" />
        <activity android:name=".MenuActivity.AboutApp" />
        <activity android:name=".Activity.AccountActivity" />
        <activity android:name=".SignUpActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".Activity.AddMemberActivity" />
        <activity
            android:name=".TicketsActivity"
            android:label="@string/title_activity_tickets"
            android:theme="@style/AppTheme" />
        <activity android:name=".Tickets.UploadedTicketsActivity" />
        <activity
            android:name=".ScrollingActivity"
            android:label="@string/title_activity_scrolling"
            android:theme="@style/AppTheme" />
        <activity android:name=".Activity.ScanActivity" />
        <activity android:name=".Activity.AddTicketsActivity" />
        <activity android:name=".FamilyListActivity" />
        <activity android:name=".FamilyActivity.FamilyActivity" />
        <activity android:name=".PromocodeRuleActivity" />
        <activity
            android:name=".FrameActivity"
            android:label="@string/title_activity_frame"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>