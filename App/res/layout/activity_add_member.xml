<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddMemberActivity"

    android:orientation="vertical">
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bungee_shade"
        android:text="@string/text_member_title"
        android:textSize="30sp"
        android:textColor="#288b35"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:background="#288b35"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="@string/text_name"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            />

        <EditText
            android:id="@+id/member_firstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="@string/text_email"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="#ffffff"

            />

        <EditText
            android:id="@+id/member_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="@string/text_aadhar"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:singleLine="true"

            />

        <EditText
            android:id="@+id/member_aadhar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="@string/text_age"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="#ffffff"

            />

        <EditText
            android:id="@+id/member_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="@string/text_employed"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="#ffffff"

            />

        <EditText
            android:id="@+id/member_employed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:hint="@string/text_yes_no"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="@string/text_relation"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="#ffffff"

            />

        <EditText
            android:id="@+id/member_relation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:singleLine="true"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:text="@string/text_member_phone"
            android:layout_marginLeft="5dp"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textColor="#ffffff"
            />
        <EditText
            android:id="@+id/member_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:padding="8dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:singleLine="true"
            />
        <Button
            android:id="@+id/member_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_bg"
            android:text="@string/member_button"
            android:textSize="18dp"
            android:fontFamily="serif-monospace"
            android:textColor="#ffffff"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>