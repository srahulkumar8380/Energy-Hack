<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main"
    android:orientation="vertical"
    android:background="#ffffff"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/title_home"
        android:padding="1dp"
        android:text="@string/text_upload"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="@font/bungee_shade"

        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#cdcdcd"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        />
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="100dp"
          android:elevation="30dp"
          >
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              >
               <android.support.v7.widget.CardView
                   android:layout_width="0dp"
                   android:layout_weight="2"
                   android:layout_margin="8dp"
                   app:cardCornerRadius="20dp"
                   android:layout_marginRight="20dp"
                   android:layout_height="match_parent"
                   android:background="@color/cardview_dark_background"
                   >

                   <ImageView
                       android:id="@+id/home_upload_number"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_gravity="center"
                       android:background="@drawable/title"
                       android:src="@drawable/upload" />

               </android.support.v7.widget.CardView>
              <android.support.v7.widget.CardView
                  android:layout_width="0dp"
                  android:layout_weight="2"
                  android:layout_margin="8dp"
                  app:cardCornerRadius="20dp"
                  android:background="@drawable/title"
                  android:layout_height="match_parent"
                  >

                  <ImageView
                      android:id="@+id/home_upload_scan"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:padding="13dp"
                      android:background="@drawable/title"
                      android:src="@drawable/barcode" />
              </android.support.v7.widget.CardView>
          </LinearLayout>


      </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/text_up"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="#0a4e11"
            android:gravity="center_horizontal"
            android:layout_margin="3dp"
            android:padding="3dp"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|center_vertical"
            android:text="@string/text_scanTickets"
            android:textSize="17dp"
            android:layout_marginRight="3dp"
            android:textStyle="italic"
            android:gravity="center_horizontal"
            android:textColor="#0a4e11"
            android:fontFamily="sans-serif"
            android:layout_margin="3dp"
            android:padding="3dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/title_home"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center"
        android:padding="1dp"
        android:text="@string/text_userDetails"
        android:textColor="#ffffff"
        android:textSize="20dp"

        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/title"
       android:layout_margin="5dp"
        >

     <TextView
            android:id="@+id/home_account"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/text_account"
            android:background="@drawable/home_bg"
            android:drawableLeft="@drawable/account"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
         />


        <TextView
            android:id="@+id/home_upload_tickets"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/history"
            android:drawablePadding="20dp"
            android:gravity="center_vertical"
            android:paddingRight="5dp"
            android:text="@string/text_upload_tickets"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            tools:ignore="RtlCompat"
            android:layout_weight="1"
            android:background="@drawable/home_left"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/home_addFamilyMenber"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:drawableLeft="@drawable/family"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="@string/text_family"
            android:textSize="25dp"
            android:fontFamily="serif-monospace"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:background="@drawable/home_bg"
            android:layout_gravity="left"
            android:textAlignment="center"
            android:layout_weight="1"

            />


        <TextView
            android:id="@+id/home_rule"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@drawable/home_left"
            android:drawableRight="@drawable/transaction"
            android:fontFamily="serif-monospace"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:text="@string/text_my"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:textStyle="bold"
            tools:ignore="RtlCompat" />
</LinearLayout>
</LinearLayout>