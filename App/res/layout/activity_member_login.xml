<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MemberLoginActivity"
    android:orientation="vertical"
    android:background="@drawable/tranposrt"
    android:alpha="0.5"
    >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:layout_gravity="center"
         android:gravity="center"
         >
         <EditText
             android:id="@+id/memberlogin_family_id"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="Enter Family Id Number"
             android:textSize="20dp"
             android:fontFamily="serif-monospace"
             android:layout_gravity="center_horizontal"
             android:gravity="center_horizontal"
             android:background="@drawable/family_member_bg"
             android:padding="10dp"
             android:layout_margin="5dp"
             android:inputType="number"
             />
         <Button
             android:id="@+id/member_go_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/button_bg"
             android:textColor="#ffffff"
             android:text="Go"
             android:paddingLeft="60dp"
             android:paddingRight="60dp"
             android:textSize="18dp"
             android:layout_margin="5dp"
             android:layout_gravity="center_horizontal"
             />
     </LinearLayout>

</LinearLayout>